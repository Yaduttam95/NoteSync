<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="10dp"
    android:background="@drawable/homeback"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/hometop"
        android:orientation="vertical"
        android:paddingHorizontal="25dp"
        android:paddingTop="40dp"
        android:paddingBottom="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/greeting_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#131313"
            android:fontFamily="@font/inconsolatafont"
            android:textSize="65sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/htime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inconsolatafont"
                android:gravity="start"
                android:textColor="#131313"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/hdate"
                android:layout_width="match_parent"
                android:fontFamily="@font/inconsolatafont"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:textColor="#131313"
                android:textSize="30sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginVertical="10dp"
        android:orientation="vertical"
        android:paddingVertical="20dp"
        android:paddingHorizontal="25dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/homemid"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">


        <TextView
            android:onClick="addNote"
            android:fontFamily="@font/aloeverafont"
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="30dp"
            android:gravity="center_vertical"
            android:textColor="#F5F5F5"
            android:text="Take a Note ðŸ“" />

        <TextView
            android:onClick="addTask"
            android:id="@+id/textView6"
            android:fontFamily="@font/aloeverafont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="30dp"
            android:gravity="center_vertical"
            android:textColor="#F5F5F5"
            android:text="Add a Task âš’ï¸" />

        <TextView
            android:id="@+id/textView5"
            android:fontFamily="@font/aloeverafont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="30dp"
            android:gravity="center_vertical"
            android:textColor="#F5F5F5"
            android:text="Set an Alarm â°" />

        <TextView
            android:id="@+id/textView7"
            android:fontFamily="@font/aloeverafont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="30dp"
            android:gravity="center_vertical"
            android:textColor="#F5F5F5"
            android:text="Set a Reminder ðŸ””" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/bottomnav"
        android:paddingVertical="20dp"
        android:paddingHorizontal="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginHorizontal="18dp"
            android:layout_weight="1"
            android:background="@drawable/noteaddicon"
            android:onClick="notewall"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck"></TextView>

        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginHorizontal="18dp"
            android:layout_weight="1"
            android:background="@drawable/tasks"
            android:onClick="taskWall"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"></TextView>

        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginHorizontal="18dp"
            android:layout_weight="1"
            android:background="@drawable/homeicon"></TextView>

        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginHorizontal="18dp"
            android:layout_weight="1"
            android:background="@drawable/alarmicon"></TextView>

        <TextView
            android:onClick="bottom"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginHorizontal="18dp"
            android:layout_weight="1"
            android:background="@drawable/info"></TextView>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>