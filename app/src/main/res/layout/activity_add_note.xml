<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#131313"
    android:paddingVertical="10dp"
    android:paddingHorizontal="10dp"
    tools:context=".AddNoteActivity">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_marginVertical="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/inconsolatafont"
            android:text="ADD NOTE"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:textSize="15sp">
        </TextView>

        <TextView
            android:id="@+id/htime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inconsolatafont"
            android:gravity="end"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textSize="15sp" />

    </LinearLayout>

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:paddingVertical="4dp"
        android:background="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />

    <EditText
        android:id="@+id/editText"
        style="@style/NoUnderlineEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Title"
        android:paddingVertical="15dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:fontFamily="@font/inconsolatafont"
        android:textSize="45sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view2"></EditText>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="4dp"
        android:background="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText" />

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10dp"
        android:paddingVertical="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/addbtn"
            android:onClick="addNote"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="10dp"
            android:fontFamily="@font/aloeverafont"
            android:layout_weight="1"
            android:background="@drawable/addnotebtns"
            android:gravity="center_vertical"
            android:paddingHorizontal="20dp"
            android:text="ADD"
            android:textAlignment="center"
            android:textSize="20sp"
            tools:ignore="RtlCompat"></TextView>

        <TextView
            android:id="@+id/disbtn"
            android:onClick="disbtn"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            android:fontFamily="@font/aloeverafont"
            android:background="@drawable/addnotebtns"
            android:gravity="center_vertical"
            android:paddingHorizontal="20dp"
            android:text="DISCARD"
            android:textAlignment="center"
            android:textSize="20sp"
            tools:ignore="RtlCompat"></TextView>


    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view">

        <EditText
            android:id="@+id/editTextText2"
            style="@style/NoUnderlineEditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="10dp"
            android:ems="10"
            android:gravity="top|start"
            android:hint="Your Note here..."
            android:inputType="textMultiLine"
            android:fontFamily="@font/inconsolatafont"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10dp"
            android:textAlignment="viewStart"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="17dp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view"
            tools:ignore="TouchTargetSizeCheck" />

    </ScrollView>







</androidx.constraintlayout.widget.ConstraintLayout>