<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="10dp"
    android:background="@drawable/homeback"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/hometop"
        android:orientation="vertical"
        android:paddingHorizontal="25dp"
        android:paddingTop="40dp"
        android:paddingBottom="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/greeting_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#131313"
            android:fontFamily="@font/inconsolatafont"
            android:textSize="65sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/htime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inconsolatafont"
                android:gravity="start"
                android:textColor="#131313"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/hdate"
                android:layout_width="match_parent"
                android:fontFamily="@font/inconsolatafont"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:textColor="#131313"
                android:textSize="30sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginVertical="10dp"
        android:background="@drawable/homemid"
        android:orientation="vertical"
        android:paddingHorizontal="25dp"
        android:paddingVertical="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">


        <TextView

            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/aloeverafont"
            android:gravity="center_vertical"
            android:onClick="addNote"
            android:text="Take a Note ðŸ“"
            android:textColor="#F5F5F5"
            android:textSize="30dp"
            tools:ignore="HardcodedText,SpUsage,TextContrastCheck" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/aloeverafont"
            android:gravity="center_vertical"
            android:onClick="notewall"
            android:text="View all Notes ðŸ“"
            android:textColor="#F5F5F5"
            android:textSize="30dp"
            tools:ignore="HardcodedText,SpUsage,TextContrastCheck" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/aloeverafont"
            android:gravity="center_vertical"
            android:onClick="addTask"
            android:text="Add a Task âš’ï¸"
            android:textColor="#F5F5F5"
            android:textSize="30dp"
            tools:ignore="HardcodedText,SpUsage,TextContrastCheck" />


        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/aloeverafont"
            android:gravity="center_vertical"
            android:onClick="taskWall"
            android:text="View all Tasks âš’ï¸"
            android:textColor="#F5F5F5"
            android:textSize="30dp"
            tools:ignore="HardcodedText,SpUsage,TextContrastCheck" />
    </LinearLayout>

    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/info"
        android:onClick="bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck">

    </TextView>



</androidx.constraintlayout.widget.ConstraintLayout>